<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User | Stock System</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    .input-error-border {
      border-color: #ef4444; /* Tailwind red-500 */
      box-shadow: 0 0 0 1px #ef4444;
    }
    .toast {
      visibility: hidden;
      min-width: 250px;
      background-color: #333;
      color: #fff;
      text-align: center;
      border-radius: 8px;
      padding: 16px;
      position: fixed;
      z-index: 100;
      top: 30px;
      right: 30px;
      transform: none;
      opacity: 0;
      transition: opacity 0.5s, visibility 0.5s;
    }
    .toast.show {
      visibility: visible;
      opacity: 1;
    }
  </style>
</head>
<body class="bg-gray-100 font-sans">

  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <%- include('partials/sidebar', { currentUser: currentUser, currentRole: currentRole }) %>

    <!-- Main Content -->
    <main class="flex-1 flex items-center justify-center p-6">
      <div class="w-full max-w-4xl">

        <!-- Card -->
        <div class="bg-white/90 backdrop-blur-md rounded-2xl shadow-xl border border-gray-200 hover:shadow-2xl transition">

          <!-- Card Header -->
          <div class="bg-gradient-to-r from-blue-600 to-blue-500 text-white rounded-t-2xl px-6 py-4">
            <h1 class="text-xl font-semibold">‚úèÔ∏è Edit User: <%= user.username %></h1>
          </div>

          <!-- Card Body -->
          <div class="p-8">
            <% if (error) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <strong class="font-bold">Error!</strong>
                    <span class="block sm:inline"><%= error %></span>
                </div>
            <% } %>

            <form id="userForm" action="/User/edit/<%= user._id %>" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-6">

              <!-- Full Name -->
              <div>
                <label for="fullname" class="block text-sm font-medium text-gray-700">Full Name</label>
                <div class="relative mt-1">
                  <span class="absolute inset-y-0 left-3 flex items-center text-gray-400">üë§</span>
                  <input type="text" id="fullname" name="fullname" required
                         class="w-full pl-10 pr-3 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                         value="<%= typeof formData !== 'undefined' ? formData.fullname : user.fullname %>">
                </div>
                <p class="text-red-500 text-sm hidden" id="fullnameError">Full Name is required.</p>
              </div>

              <!-- Username (Read-only or disabled for security/simplicity) -->
              <div>
                <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
                <div class="relative mt-1">
                  <span class="absolute inset-y-0 left-3 flex items-center text-gray-400">üë§</span>
                  <input type="text" id="username" name="username" readonly disabled
                         class="w-full pl-10 pr-3 py-2 border rounded-lg shadow-sm bg-gray-100 cursor-not-allowed"
                         value="<%= typeof formData !== 'undefined' ? formData.username : user.username %>">
                </div>
                <p class="text-sm text-gray-500 mt-1">Username cannot be changed.</p>
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <div class="relative mt-1">
                  <span class="absolute inset-y-0 left-3 flex items-center text-gray-400">‚úâÔ∏è</span>
                  <input type="email" id="email" name="email" required
                         class="w-full pl-10 pr-3 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                         value="<%= typeof formData !== 'undefined' ? formData.email : user.email %>">
                </div>
                <p class="text-red-500 text-sm hidden" id="emailError">Enter a valid email.</p>
              </div>

              <!-- Role - UPDATED SECTION -->
              <div>
                <label for="role" class="block text-sm font-medium text-gray-700">Role</label>
                <select id="role" name="role" required
                        class="w-full mt-1 px-4 py-2 border rounded-lg shadow-sm bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                  <option value="">-- Select Role --</option>
                  <% if (currentRole === 'Super Admin') { %>
                    <option value="Super Admin" <%= ((typeof formData !== 'undefined' ? formData.role : user.role) === 'Super Admin') ? 'selected' : '' %>>Super Admin</option>
                  <% } %>
                  <option value="Admin" <%= ((typeof formData !== 'undefined' ? formData.role : user.role) === 'Admin') ? 'selected' : '' %>>Admin</option>
                  <option value="User" <%= ((typeof formData !== 'undefined' ? formData.role : user.role) === 'User') ? 'selected' : '' %>>User</option>
                </select>
                <p class="text-red-500 text-sm hidden" id="roleError">Role is required.</p>
              </div>

              <!-- Password (Optional change) -->
              <div>
                <label for="password" class="block text-sm font-medium text-gray-700">New Password (optional)</label>
                <div class="relative mt-1">
                  <span class="absolute inset-y-0 left-3 flex items-center text-gray-400">üîí</span>
                  <input type="password" id="password" name="password"
                         class="w-full pl-10 pr-3 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                <p class="text-red-500 text-sm hidden" id="passwordError">New password is required if changing.</p>
              </div>

              <!-- Confirm Password (Optional change) -->
              <div>
                <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm New Password</label>
                <div class="relative mt-1">
                  <span class="absolute inset-y-0 left-3 flex items-center text-gray-400">üîí</span>
                  <input type="password" id="confirmPassword" name="confirmPassword"
                         class="w-full pl-10 pr-3 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                <p class="text-red-500 text-sm hidden" id="confirmError">Passwords do not match.</p>
              </div>

              <!-- Buttons -->
              <div class="col-span-1 md:col-span-2 flex justify-end gap-3 pt-4">
                <a href="/User/list"
                   class="px-5 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition">
                   Cancel
                </a>
                <button type="submit"
                        class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 shadow-md transition">
                  Update User
                </button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Status Toast Notification -->
  <div id="statusToast" class="toast"></div>


  <!-- Validation Script -->
  <script>
    const form = document.getElementById("userForm");
    // Only required for fields that are NOT password-related, as password is optional
    const inputs = form.querySelectorAll("input[required]:not(#password):not(#confirmPassword), select[required]");
    const emailInput = document.getElementById('email');
    const roleSelect = document.getElementById('role');
    const passwordInput = document.getElementById('password');
    const confirmPasswordInput = document.getElementById('confirmPassword');

    // Function to show toast (same as user_add.ejs)
    function showToast(message, isSuccess = true) {
      const toast = document.getElementById('statusToast');
      toast.textContent = message;
      toast.style.backgroundColor = isSuccess ? '#10B981' : '#EF4444';
      toast.classList.add('show');
      setTimeout(() => {
        toast.classList.remove('show');
      }, 3000);
    }

    form.addEventListener("submit", (e) => {
      let valid = true;

      // Reset error styles and messages for all validated inputs
      inputs.forEach(input => {
        input.classList.remove("input-error-border");
        const errorEl = document.getElementById(input.id + "Error");
        if (errorEl) errorEl.classList.add("hidden");
      });
      passwordInput.classList.remove("input-error-border");
      confirmPasswordInput.classList.remove("input-error-border");
      document.getElementById("passwordError").classList.add("hidden");
      document.getElementById("confirmError").classList.add("hidden");


      // Validate core required fields
      inputs.forEach(input => {
        if (!input.value.trim() || (input.tagName === 'SELECT' && input.value === '')) {
          valid = false;
          input.classList.add("input-error-border");
          const errorEl = document.getElementById(input.id + "Error");
          if (errorEl) errorEl.classList.remove("hidden");
        }
      });

      // Validate email format (optional, but good practice)
      if (emailInput.value.trim() && !/\S+@\S+\.\S+/.test(emailInput.value.trim())) {
          valid = false;
          emailInput.classList.add("input-error-border");
          document.getElementById("emailError").textContent = "Please enter a valid email address.";
          document.getElementById("emailError").classList.remove("hidden");
      }

      // Password change validation
      const newPasswordVal = passwordInput.value.trim();
      const confirmNewPasswordVal = confirmPasswordInput.value.trim();

      if (newPasswordVal || confirmNewPasswordVal) { // If either new password field has content
        if (!newPasswordVal) {
          valid = false;
          passwordInput.classList.add("input-error-border");
          document.getElementById("passwordError").textContent = "New password is required if changing.";
          document.getElementById("passwordError").classList.remove("hidden");
        }
        if (!confirmNewPasswordVal) {
          valid = false;
          confirmPasswordInput.classList.add("input-error-border");
          document.getElementById("confirmError").textContent = "Confirm new password is required.";
          document.getElementById("confirmError").classList.remove("hidden");
        } else if (newPasswordVal !== confirmNewPasswordVal) {
          valid = false;
          confirmPasswordInput.classList.add("input-error-border");
          document.getElementById("confirmError").textContent = "New passwords do not match.";
          document.getElementById("confirmError").classList.remove("hidden");
        }
      }

      if (!valid) {
        e.preventDefault();
        showToast("Please correct the errors in the form.", false);
      }
    });

    // Real-time password match check (similar to add user)
    [passwordInput, confirmPasswordInput].forEach(input => {
      input.addEventListener("input", () => {
        const newPasswordVal = passwordInput.value.trim();
        const confirmNewPasswordVal = confirmPasswordInput.value.trim();
        const confirmErrorEl = document.getElementById("confirmError");

        confirmPasswordInput.classList.remove("input-error-border");
        confirmErrorEl.classList.add("hidden");

        if (newPasswordVal && confirmNewPasswordVal && newPasswordVal !== confirmNewPasswordVal) {
          confirmErrorEl.textContent = "New passwords do not match.";
          confirmErrorEl.classList.remove("hidden");
          confirmPasswordInput.classList.add("input-error-border");
        }
      });
    });

    // Check for success message on page load
    document.addEventListener('DOMContentLoaded', () => {
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get('success') === 'true') {
        showToast("User updated successfully!", true);
        history.replaceState({}, document.title, window.location.pathname);
      }
    });
  </script>

</body>
</html>