<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Closed Incoming Report | Stock System</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="flex bg-gray-100">

  <!-- Sidebar -->
  <%- include('partials/sidebar') %>

  <main class="flex-1 p-6">
    <h1 class="text-3xl font-bold mb-6">üìÑ Closed Incoming Report</h1>

    <!-- Date Filter Form -->
    <form method="GET" class="mb-6 flex items-end">
      <div class="flex gap-2 items-end">
        <div>
          <label class="block font-semibold">From:</label>
          <input type="date" name="from" value="<%= from || '' %>" class="border rounded p-2">
        </div>
        <div>
          <label class="block font-semibold">To:</label>
          <input type="date" name="to" value="<%= to || '' %>" class="border rounded p-2">
        </div>
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Filter</button>
        <a href="/incoming/report/closed" class="text-gray-700 hover:underline px-4 py-2">Reset</a>
      </div>

      <!-- PDF Button on right -->
      <div class="ml-auto">
        <a 
          href="/incoming/report/closed/pdf?<%= from ? 'from=' + from + '&' : '' %><%= to ? 'to=' + to : '' %>" 
          target="_blank" 
          class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700"
        >
          Generate PDF
        </a>
      </div>
    </form>

    <% if (!waybills || waybills.length === 0) { %>
      <p class="text-gray-600">No closed waybills found for the selected date range.</p>
    <% } else { %>
      <div class="space-y-6">
        <% waybills.forEach(wb => { %>
          <div class="bg-white shadow rounded-lg p-4">
            <div class="mb-2 font-semibold text-lg">
              <%= wb.waybillNo %> | <%= wb.count %> <%= wb.uom %> | 
              <%= wb.closedAt ? dayjs(wb.closedAt).format('MMMM DD, YYYY') : '-' %>
            </div>

            <table class="w-full text-left border-collapse">
              <thead>
                <tr class="bg-gray-200">
                  <th class="p-2 border">Product Name</th>
                  <th class="p-2 border">Incoming Count</th>
                  <th class="p-2 border">Actual Count</th>
                  <th class="p-2 border">Discrepancy</th>
                  <th class="p-2 border">Remarks Actual Count</th>
                </tr>
              </thead>
              <tbody>
                <% wb.items.forEach(item => {
                     const discrepancy = (item.actualCount || 0) - item.incoming;
                %>
                  <tr>
                    <td class="p-2 border"><%= item.productName %></td>
                    <td class="p-2 border"><%= item.incoming %> <%= item.uomIncoming %></td>
                    <td class="p-2 border"><%= item.actualCount || 0 %> <%= item.uomIncoming %></td>
                    <td class="p-2 border font-semibold
                        <%= discrepancy > 0 ? 'text-green-600' : discrepancy < 0 ? 'text-red-600' : 'text-gray-600' %>">
                      <% if (discrepancy === 0) { %>
                        ‚úî
                      <% } else if (discrepancy < 0) { %>
                        ‚ö†Ô∏è Shortage: <%= Math.abs(discrepancy) %>
                      <% } else { %>
                        ‚ö†Ô∏è Over: <%= discrepancy %>
                      <% } %>
                    </td>
                    <td class="p-2 border text-gray-700">
                      <%= item.remarkActual && item.remarkActual.trim() !== "" ? item.remarkActual : "-" %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>
</body>
</html>
