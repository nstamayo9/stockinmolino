<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>✏️ Edit Waybill | Stock System</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/selectize/dist/css/selectize.default.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="flex bg-gray-100 min-h-screen">

  <!-- Sidebar -->
  <%- include('partials/sidebar') %>

  <main class="flex-1 p-6">
    <h1 class="text-3xl font-bold mb-6">✏️ Edit Waybill</h1>

    <form id="waybillForm" method="POST" action="/waybills/edit/<%= waybill._id %>" class="bg-white shadow rounded-lg p-6">
      <div id="waybillsContainer"></div>

      <button type="submit" class="bg-green-500 text-white px-6 py-2 rounded hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500">
        Save Changes
      </button>
    </form>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/selectize/dist/js/standalone/selectize.min.js"></script>
  <script src="/js/waybill_form_logic.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const existingWaybill = <%- JSON.stringify(waybill) %>;
      window.initializeWaybillForm(existingWaybill, true);
    });
  </script>
</body>
</html>