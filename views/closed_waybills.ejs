<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Closed Waybills | Stock System</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="flex bg-gray-100 min-h-screen">

  <!-- Sidebar -->
  <%- include('partials/sidebar') %>

  <main class="flex-1 p-6">
    <h1 class="text-3xl font-bold mb-6">ðŸ“œ Closed Waybills</h1>

    <div class="overflow-x-auto bg-white shadow rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Waybill No</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Count</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">UOM</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Items</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Closed At</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if (waybills && waybills.length > 0) { %>
            <% waybills.forEach(wb => { %>
              <tr>
                <td class="px-4 py-2 whitespace-nowrap"><%= wb.waybillNo %></td>
                <td class="px-4 py-2 whitespace-nowrap"><%= wb.count %></td>
                <td class="px-4 py-2 whitespace-nowrap"><%= wb.uom %></td>
                <td class="px-4 py-2 whitespace-nowrap"><%= wb.items.length %></td>
                <td class="px-4 py-2 whitespace-nowrap">
                  <% if (wb.closedAt) { %>
                    <%= dayjs(wb.closedAt).format('MMMM DD, YYYY HH:mm') %>
                  <% } else if (wb.date) { %>
                    <%= dayjs(wb.date).format('MMMM DD, YYYY') %>
                  <% } else { %>
                    -
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center py-4 text-gray-500">No closed waybills yet.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>
</body>
</html>
